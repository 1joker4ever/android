<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp">

        <TextView
            android:id="@+id/dialog_recovery_key_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/copyright_text"
            android:text="@string/recovery_key_exported_dialog_title"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/dialog_recovery_key_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/mail_my_account"
            android:text="@string/recovery_key_exported_dialog_text"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/dialog_recovery_key_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:layout_marginRight="-25dp"
            android:layout_gravity="right"
            android:textColor="@color/accentColor"
            android:text="@string/cam_sync_ok"
            android:textSize="14sp"/>

    </LinearLayout>

</ScrollView>