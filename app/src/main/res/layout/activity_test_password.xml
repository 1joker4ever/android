<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/test_password_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:text="@string/test_pwd_title"
            android:layout_marginTop="17dp"
            android:textColor="@color/name_my_account"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/enter_pwd_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="@string/hint_set_password_protection_dialog"
            android:textColor="@color/accentColor"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/test_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-2dp"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:theme="@style/ColorControlStyle" />

            <ImageView
                android:id="@+id/toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/test_password_edittext"
                android:layout_alignBottom="@+id/test_password_edittext"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_b_shared_read"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_password_text_error"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/test_password_text_error_icon"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/test_password_text_error_text"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/login_password_text_error_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <Button
            android:id="@+id/test_password_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="55dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/hint_confirm_password_protection_dialog"
            android:textSize="14sp"
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/test_password_backup_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/action_export_master_key"
            android:textSize="14sp"
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/test_password_dismiss_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/accentColor"
            android:text="@string/general_dismiss"
            android:textSize="14sp"
            style="@style/ButtonStyle"/>

    </LinearLayout>

</ScrollView>