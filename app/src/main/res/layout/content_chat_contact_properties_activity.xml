<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mega.privacy.android.app.lollipop.megachat.ContactChatInfoActivityLollipop"
    tools:showIn="@layout/activity_chat_contact_properties">

    <LinearLayout
        android:id="@+id/chat_contact_properties_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- NOTIFICATIONS LAYOUT -->

        <LinearLayout
            android:id="@+id/chat_contact_properties_notifications_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="72dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chat_contact_properties_notifications_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textColor="@color/name_my_account"
                android:layout_weight="5"
                android:text="@string/title_properties_chat_contact_notifications"
                android:textSize="16dp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/chat_contact_properties_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separator_grey" />

        <!-- CHAT MESSAGE SOUND LAYOUT -->

        <RelativeLayout
            android:id="@+id/chat_contact_properties_messages_sound_layout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/chat_contact_properties_messages_sound_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_properties_chat_contact_message_sound"
                    android:textSize="16dp"
                    android:textColor="@color/name_my_account"/>

                <TextView
                    android:id="@+id/chat_contact_properties_messages_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chat_contact_properties_messages_sound_label"
                    android:text="Probando"
                    android:textColor="@color/accentColor"
                    android:textSize="14dp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_message_sound_layout"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separator_grey" />

        <!-- CALL RINGTONE LAYOUT -->

        <RelativeLayout
            android:id="@+id/chat_contact_properties_ringtone_layout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/chat_contact_properties_ringtone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_properties_chat_contact_call_sound"
                    android:textSize="16dp"
                    android:textColor="@color/name_my_account"/>

                <TextView
                    android:id="@+id/chat_contact_properties_ringtone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chat_contact_properties_ringtone_label"
                    android:text="Probando"
                    android:textColor="@color/accentColor"
                    android:textSize="14dp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_ringtone_layout"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separator_grey" />

        <!-- SHARE CONTACT LAYOUT -->

        <RelativeLayout
            android:id="@+id/chat_contact_properties_share_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_gravity="left|center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/chat_contact_properties_share_contact_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_properties_chat_share_contact"
                    android:textSize="16dp"
                    android:textColor="@color/name_my_account"/>

                <TextView
                    android:id="@+id/chat_contact_properties_share_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chat_contact_properties_share_contact_label"
                    android:text="Probando"
                    android:textColor="@color/accentColor"
                    android:textSize="14dp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider_share_contact_layout"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/separator_grey" />

        <!-- CLEAR LAYOUT -->

        <RelativeLayout
            android:id="@+id/chat_contact_properties_clear_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_contact_properties_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/title_properties_chat_clear_chat"
                    android:textSize="16dp"
                    android:textColor="@color/name_my_account"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>