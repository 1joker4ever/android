<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:id="@+id/fragment_container_change_pass"
        tools:context=".ChangePasswordActivityLollipop" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:text="@string/my_account_change_password"
                android:layout_marginBottom="16dp"
                android:textColor="@color/delete_account"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/change_password_oldPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:layout_gravity="left"
                android:hint="@string/my_account_change_password_oldPassword"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:id="@+id/login_oldPassword_text_error"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_oldPassword_text_error_icon"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_input_warning"
                    android:tint="@color/login_warning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/login_oldPassword_text_error_text"
                    android:textColor="@color/login_warning"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/change_password_newPassword1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:hint="@string/my_account_change_password_newPassword1"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:id="@+id/login_newPassword1_text_error"
                android:layout_gravity="left"
                android:padding="0dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_newPassword1_text_error_icon"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_input_warning"
                    android:tint="@color/login_warning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/login_newPassword1_text_error_text"
                    android:textColor="@color/login_warning"/>
            </RelativeLayout>


            <EditText
                android:id="@+id/change_password_newPassword2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:hint="@string/my_account_change_password_newPassword2"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/login_newPassword2_text_error"
                android:layout_gravity="left"
                android:layout_marginRight="48dp"
                android:layout_marginLeft="48dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_newPassword2_text_error_icon"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_input_warning"
                    android:tint="@color/login_warning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/login_newPassword2_text_error_text"
                    android:textColor="@color/login_warning"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/change_pass_three_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_three_dots" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/ABC_change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/abc"
                    android:textColor="@color/textGrey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/options_explorer_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accentColor"
                    android:stateListAnimator="@null"
                    android:background="@android:color/transparent"
                    android:text="@string/general_cancel"/>

                <Button
                    android:id="@+id/action_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accentColor"
                    android:stateListAnimator="@null"
                    android:paddingRight="0dp"
                    android:text="@string/change_pass"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>