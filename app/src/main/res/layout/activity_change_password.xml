<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/fragment_container_change_pass"
            tools:context=".ChangePasswordActivityLollipop" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="?attr/actionBarSize"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_account_change_password"
                    android:textColor="@color/delete_account"
                    android:layout_marginLeft="3dp"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <EditText
                        android:id="@+id/change_password_newPassword1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:hint="@string/my_account_change_password_newPassword1"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/toggle_button_new_passwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/change_password_newPassword1"
                        android:layout_alignBottom="@+id/change_password_newPassword1"
                        android:paddingBottom="10dp"
                        android:paddingRight="5dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_b_shared_read"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/login_newPassword1_text_error"
                    android:layout_gravity="left"
                    android:padding="0dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_newPassword1_text_error_icon"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_input_warning"
                        android:tint="@color/login_warning"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/login_newPassword1_text_error_text"
                        android:textColor="@color/login_warning"
                        android:layout_toLeftOf="@+id/login_newPassword1_text_error_icon"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/container_passwd_elements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/shape_passwd_first"
                            android:layout_width="@dimen/width_passwd_shape"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/passwd_very_weak"/>
                        <ImageView
                            android:id="@+id/shape_passwd_second"
                            android:layout_width="@dimen/width_passwd_shape"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_password"/>
                        <ImageView
                            android:id="@+id/shape_passwd_third"
                            android:layout_width="@dimen/width_passwd_shape"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_password"/>
                        <ImageView
                            android:id="@+id/shape_passwd_fourth"
                            android:layout_width="@dimen/width_passwd_shape"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_password"/>
                        <ImageView
                            android:id="@+id/shape_passwd_fifth"
                            android:layout_width="@dimen/width_passwd_shape"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/shape_password"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/password_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/login_warning"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/pass_very_weak"/>

                    <TextView
                        android:id="@+id/password_advice_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/name_my_account"
                        android:text="@string/passwd_weak"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <EditText
                        android:id="@+id/change_password_newPassword2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:hint="@string/my_account_change_password_newPassword2"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/toggle_button_new_passwd2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/change_password_newPassword2"
                        android:layout_alignBottom="@+id/change_password_newPassword2"
                        android:paddingBottom="10dp"
                        android:paddingRight="5dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_b_shared_read"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/login_newPassword2_text_error"
                    android:layout_gravity="left"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_newPassword2_text_error_icon"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_input_warning"
                        android:tint="@color/login_warning"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/login_newPassword2_text_error_text"
                        android:textColor="@color/login_warning"
                        android:layout_toLeftOf="@+id/login_newPassword2_text_error_icon"
                        android:layout_alignParentLeft="true"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/action_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@string/my_account_change_password"
                    android:background="@drawable/background_button"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_gravity="left"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="47dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="6dp"
                    android:stateListAnimator="@null"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/change_password_2fa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:title="@string/change_password_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="@color/lollipop_primary_color"
                android:elevation="4dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextAppearance="@style/ToolbarTitle"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                tools:context=".lollipop.ChangePasswordActivityLollipop" />

            <RelativeLayout
                android:id="@+id/container_confirm_2fa_change_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar">

                <TextView
                    android:id="@+id/explain_confirm_2fa_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_login_2fa_verification"
                    android:textColor="@color/name_my_account"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:fontFamily="roboto"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:id="@+id/six_pin_change_password_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/explain_confirm_2fa_change_password"
                    android:layout_marginTop="36dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pin_first_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/name_my_account"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pin_second_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/name_my_account"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pin_third_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/name_my_account"
                        android:layout_marginRight="38dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pin_fouth_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/name_my_account"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pin_fifth_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/name_my_account"
                        android:layout_marginRight="16dp"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1" />

                    <mega.privacy.android.app.components.EditTextPIN
                        android:id="@+id/pin_sixth_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textColor="@color/name_my_account"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/pin_2fa_error_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginBottom="40dp"
                    android:text="@string/pin_error_2fa"
                    android:textColor="@color/login_warning"
                    android:fontFamily="roboto"
                    android:layout_below="@+id/six_pin_change_password_layout"
                    android:layout_alignLeft="@id/six_pin_change_password_layout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:id="@+id/lost_authentication_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/six_pin_change_password_layout"
                    android:padding="10dp"
                    android:layout_marginTop="29dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lost_your_authenticator_device"
                        android:textColor="@color/file_playlist_state"
                        android:textSize="13sp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/button_verify_2fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lost_authentication_device"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/background_button"
                    android:elevation="8dp"
                    android:textColor="@color/white"
                    android:text="@string/general_verify"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>