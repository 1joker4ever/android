<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rounded="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/shared_folder_item_layout">
         
    <com.mega.components.RoundedImageView 
         android:id="@+id/shared_folder_contact_thumbnail"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_marginLeft="5dp" 
         android:scaleType="fitCenter"
         android:paddingTop="3dp"
         rounded:corner_radius="27dp" 
         rounded:border_width="2dp"
         rounded:border_color="@color/border_file_properties"/>
    
    <TextView
        android:id="@+id/shared_folder_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/shared_folder_contact_thumbnail"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
         android:textStyle="bold" />
    
    <TextView
        android:id="@+id/shared_folder_contact_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shared_folder_contact_thumbnail"
        android:layout_below="@id/shared_folder_contact_name"
        android:textColor="@color/file_list_second_row"
        android:paddingLeft="5dp"
        android:paddingBottom="7dp"/>
    
    <ImageButton 
        android:id="@+id/shared_folder_contact_three_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/three_dots_background_shared"
		android:background="@null" 
        android:layout_alignTop="@id/shared_folder_contact_name"
        android:layout_alignParentRight="true"
		android:paddingTop="25dp"
        android:paddingLeft="5dp"
        android:paddingRight="15dp" />
    
    <ImageView
        android:id="@+id/shared_folder_contact_arrow_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_selection"
		android:layout_alignBottom="@id/shared_folder_contact_permissions"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp" />
    
    <RelativeLayout
        android:id="@+id/shared_folder_contact_options"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_folder_contact_arrow_selection"
        android:padding="0dp"
        android:background="#222222">
        
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <TableRow>
	            <ImageButton
		            android:id="@+id/shared_folder_permissions_option"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/permissions_button"
		            android:paddingLeft="30dp"
		            android:paddingTop="10dp"
		            android:background="@null" 
		            android:layout_gravity="center_vertical"/>
	        
		        <ImageButton
		            android:id="@+id/shared_folder_remove_share_option"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/remove_share_button"
		            android:paddingLeft="30dp"
		            android:paddingTop="10dp"
		            android:background="@null"
		            android:layout_gravity="center_vertical" />
	        </TableRow>        
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>

