    <LinearLayout
        android:id="@+id/myaccount_email_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myaccount_email_icon"
            style="@style/dialogActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:id="@+id/myaccount_email_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myaccount_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_text"
                android:textColor="@color/file_properties_info_menu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccount_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/file_properties_info_menu" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_account_account_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange">

        <ImageView
            android:id="@+id/my_account_account_type_icon"
            style="@style/dialogActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_alignParentLeft="true" />

        <LinearLayout 
            android:id="@+id/my_account_account_type_account_type_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/my_account_account_type_icon">
            
            <TextView
	            android:id="@+id/my_account_account_type_label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:text="@string/my_account_title"
	            android:textColor="@color/file_properties_info_menu"
	            android:textStyle="bold"/>
            
            <TextView
	            android:id="@+id/my_account_account_type_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/file_properties_info_menu" />
            
        </LinearLayout>

        <Button
            android:id="@+id/my_account_account_type_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_account_upgrade_pro"
            android:background="@color/accentColor"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/myaccount_expiration_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myaccount_expiration_icon"
            style="@style/dialogActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:id="@+id/myaccount_expiration_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myaccount_expiration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expires_on"
                android:textColor="@color/file_properties_info_menu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccount_expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/file_properties_info_menu" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/myaccount_used_space_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myaccount_used_space_icon"
            style="@style/dialogActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:id="@+id/myaccount_used_space_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myaccount_used_space_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_used_space"
                android:textColor="@color/file_properties_info_menu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccount_used_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/file_properties_info_menu" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/myaccount_last_session_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myaccount_last_session_icon"
            style="@style/dialogActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:id="@+id/myaccount_last_session_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myaccount_last_session_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_last_session"
                android:textColor="@color/file_properties_info_menu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccount_last_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/file_properties_info_menu" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/myaccount_connections_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myaccount_connections_icon"
            style="@style/dialogActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:id="@+id/myaccount_connections_text_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myaccount_connections_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_connections"
                android:textColor="@color/file_properties_info_menu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccount_connections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/file_properties_info_menu" />
        </LinearLayout>
    </LinearLayout>

